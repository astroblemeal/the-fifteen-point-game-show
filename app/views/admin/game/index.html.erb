<div data-controller="game">
  <h2>Waiting_list count: <span data-game-target="waitingListCount"><%= @waiting_list_count %></span></h2>
  <button data-action="click->game#clearWaitingList">Clear Waiting List</button>

  <table>
    <thead>
      <tr>
        <th>User ID</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% @waiting_list.each do |id, email| %>
        <tr>
          <td><%= id %></td>
          <td><%= email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-container">
    <form data-controller="game" data-action="submit->game#startGameSession">
      <div class="input-group">
        <label for="game_name">Name:</label>
        <br>
        <input type="text" id="game_name" name="game_name" required>
      </div>

      <% (1..5).each do |i| %>
        <div class="input-group">
          <label for="question_<%= i %>">Question <%= i %> :</label>
          <br>
          <textarea id="question_<%= i %>" name="questions[]" required></textarea>
        </div>
        <div class="input-group">
          <label for="answer_<%= i %>">Answer <%= i %> :</label>
          <br>
          <input type="text" id="answer_<%= i %>" name="answers[]" required>
        </div>
      <% end %>

      <div class="submit-button">
        <button type="submit">Start Game</button>
      </div>
    </form>
  </div>
</div>
