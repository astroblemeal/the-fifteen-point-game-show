<h1>Live Game Session</h1>
<div data-controller="game-sessions">
<% if @current_user.admin? %>
    <p>Admin stuff</p>
      <button id="clear-game-session" data-game-session-id="<%= @game_session_id %>">Clear Game Session</button>
  <% end %>

<div class="game-session-details">
  <h2>Game Name:</h2>
  <p><%= @game_name %></p>

  <h2>Player IDs:</h2>
  <% @players.each do |player_id| %>
    <p><%= player_id.id %></p>
  <% end %>

  <h2>Questions:</h2>
  <% @questions.each do |question| %>
    <p><%= question %></p>
  <% end %>

  <h2>Created At:</h2>
  <p><%= @created_at %></p>
</div>
</div>
