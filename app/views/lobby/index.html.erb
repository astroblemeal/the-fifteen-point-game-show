<h1>Welcome to the Lobby!</h1>

<% if current_user %>
 <script type="text/javascript">
    window.location.href = "<%= waiting_room_path({ user_id: @current_user.id }) %>";
  </script>
<% else %>
  <div class="forms-container">
    <div class="login-form">
      <h2>Login</h2>
      <%= form_with(url: lobby_login_path, method: :post) do |form| %>
        <div class="input-group">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>

        <div class="input-group">
          <%= form.label :password %>
          <%= form.password_field :password %>
        </div>

        <div class="actions">
          <%= form.submit "Login" %>
        </div>
      <% end %>
    </div>

    <div class="registration-form">
      <h2>Register</h2>
      <%= form_with(model: @user, url: lobby_create_path, method: :post) do |form| %>
        <div class="input-group">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>

        <div class="input-group">
          <%= form.label :password %>
          <%= form.password_field :password %>
        </div>

        <div class="input-group">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation %>
        </div>

        <div class="actions">
          <%= form.submit "Register" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
